/* pages/wode/wode.wxss */
page{
      background: #fafafa;
}
.wode_header{
      width: 100%;
      height: 200rpx;
      background: #008DFF;
      line-height: 200rpx;

      display: flex;
}
.wode_header .wode_icon{
      flex: 3;
      height: 100%;
      text-align: center;
}
.wode_header .wode_icon image{
      width: 60%;
      border-radius: 50%;
      vertical-align: middle;
}
.wode_header .wode_info{
      flex: 7;
}
.wode_header .wode_info .info_name{
      font-weight: 700;
      color: #fff;
      font-size: 38rpx;
}
/* 红包 */
.hongbao{
      width: 100%;
      height: 180rpx;
      background: #fff;
      border-bottom: 1px solid #eee;
}
.hongbao .hb_item{

      height: 180rpx;
      font-size: 28rpx;
      width: 50%;
      float: left;
      text-align: center;
      margin: auto 0;
}

.hongbao .hb_item .hb_count{
      margin-top: 50rpx;
      color: rgb(255, 95, 62);
}
.hongbao .hb_item .hb_count text{
      font-size: 48rpx;

}

.hongbao .hb_item .hb_name{
      color: #666;
}

/* 选项 */
.select {
      margin: 20rpx 0;
      border-top: 1px solid #eee;
      border-bottom: 1px solid #eee;

}
.select .select_item{
      background: #fff;
      display: flex;
      position: relative;
}
.select .select_item .select_icon{
      width: 100rpx;
      height: 100rpx;
      text-align: center;
      line-height: 90rpx;
}
.select .select_item .select_icon image{
      width: 40rpx;
      vertical-align: middle;
}
.select .select_item .select_title{
      font-size: 32rpx;
      color: #333;
      flex: 1;
      line-height: 100rpx;
      border-bottom: 1px solid #eee;
}
.select .select_item .noborder{
      border: none;
}
.select .select_item .jt{
      width: 20rpx;
      height: 20rpx;
      border-top: 2px solid #bbb;
      border-right: 2px solid #bbb;
      transform: rotate(45deg);
      position: absolute;
      right: 30rpx;
      top: 50%;
      margin-top: -10rpx;
}
