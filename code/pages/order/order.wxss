/* pages/order/order.wxss */
/* 订单头 */
page{
      width: 100%;
      background: #f8f8f8;
}
.order_container{
}
.order_container .order_item{
      background: #fff;
      overflow: hidden;
      padding: 20rpx;
      margin: 20rpx 0;
      
}
.order_container .order_item .order_header{
      width: 100%;
      height: 120rpx;
      display: flex;
}
.order_item .order_header .od_icon{
      width: 90rpx;
      line-height:110rpx;
      margin-right: 20rpx;

}
.order_item .order_header .od_icon image{
      width: 90rpx;
      height: 120rpx;
      vertical-align: middle;

}
.order_item .order_header .od_head{
      flex: 1;
      color: #333;
      font-size: 34rpx;
      line-height: 60rpx;
      border-bottom: 1px solid #f8f8f8;
}
.order_item .order_header .od_head .od_name{
      
}
.order_header .od_head .od_time{
      font-size: 26rpx;
      color: #666;
      line-height: 30rpx;

}
.order_item .order_header .od_head .od_res{
      font-size: 28rpx;
      color: #333;
}
/* 商品头*/
.order_item .goods_header .od_head{
      line-height: 100rpx;
      height: 100rpx;
      font-size: 30rpx;
      color: #666;
}
.order_item .goods_header .od_head .od_res{
      color:#333;
      font-weight: 700;
}
/* 操作control */
.od_control{
      text-align: right;
      font-size: 28rpx;
}
.od_control .again{
      float: right;
      padding: 10rpx 15rpx;
      border: 1px solid #2395ff;
      color: #2395ff;
      margin-left:20rpx; 

}

.od_control .del{
      float: right;
      padding: 10rpx 15rpx;
      border: 1px solid #ff5339;
      color: #ff5339;
}

