/* pages/pay/pay.wxss */
page{
      background-image: linear-gradient(0deg,#f5f5f5,#f5f5f5 65%,hsla(0,0%,96%,.3) 75%,hsla(0,0%,96%,0)),linear-gradient(270deg,#0085ff,#0af);
}
/* 支付地址 */
.pay_address{
      font-size: 30rpx;
      color: #fff;
      line-height: 60rpx;
      padding: 0 16rpx;
}
 .jt{
      width: 16rpx;
      height: 16rpx;
      border-right:2px solid #fff; 
      border-top:2px solid #fff; 
      transform: rotate(45deg);
      position: absolute;
      right: 20rpx;
      top: 50%;
      margin-top:-10rpx; 
}
.pay_address .ad_info{
     color: hsla(0,0%,100%,.8);
}
.pay_address .ad_con{
      font-size: 46rpx;
      font-weight: 700;
      position: relative;

}
.pay_address .ad_person{
}
.pay_address .ad_person .ad_name{
      margin-right:20rpx;
}
.pay_address .ad_person .ad_number{
}

/* 送达时间 */
.send_time{
      padding: 0 16rpx;
      width: 100%;

}
.send {
      margin: 20rpx 0;
      border-top: 1px solid #eee;
      border-bottom: 1px solid #eee;
      width: 100%;
}
.send .send_item{
      background: #fff;
      display: flex;
      position: relative;
}
.send .send_item .send_icon{
      width: 20rpx;
      height: 100rpx;
      text-align: center;
      line-height: 90rpx;
}
.send .send_item .send_title{
      font-size: 32rpx;
      color: #333;
      flex: 1;
      line-height: 100rpx;
      border-bottom: 1px solid #eee;
}
.send .send_item .send_title{
}
.send .send_item .send_title .send_now{
      margin-right: 70rpx;
      color: #2395ff;
}
.send .send_item .noborder{
      border: none;
}
.send .send_item .jt{
      width: 20rpx;
      height: 20rpx;
      border-top: 2px solid #bbb;
      border-right: 2px solid #bbb;
      transform: rotate(45deg);
      position: absolute;
      right: 30rpx;
      top: 50%;
      margin-top: -10rpx;
}
/* 送达时间 end*/
/* 下单商品 */
.paygoods {
      padding: 0 16rpx;

      margin: 20rpx 0;
      border-top: 1px solid #eee;
      border-bottom: 1px solid #eee;

}
.paygoods .paygoods_item{
      background: #fff;
      display: flex;
      position: relative;
}

.paygoods .paygoods_item .paygoods_icon{
      width: 100rpx;
      height: 100rpx;
      text-align: center;
      line-height: 90rpx;
}
/*  */

.paygoods .paygoods_item .paygoods_icon image{
      width: 60rpx;
      vertical-align: middle;
}
.paygoods .paygoods_item .paygoods_title{
      font-size: 28rpx;
      color: #333;
      flex: 1;
      line-height: 100rpx;
      border-bottom: 1px solid #eee;
      padding-right:20rpx; 
}
.paygoods_item .paygoods_title .paygoods_name{
      width: 400rpx;
      overflow: hidden;
}
.paygoods_item .paygoods_title .paygoods_price{
      color: #ff4a07;
}
.paygoods_item .paygoods_title .paygoods_price .price{
      font-size: 38rpx;
}
.paygoods_item .paygoods_title .xiaoji{
      font-size: 40rpx;
}
/* 给第一个设置特定样式-- 加大 */
.paygoods  .paygoods_item .item_addbig{
      font-weight: 700;
      font-size: 36rpx;
      height: 110rpx;
      line-height: 110rpx;
}
.paygoods .paygoods_item .icon_pd{
      width: 32rpx;
}
/*加大 end*/
.paygoods .paygoods_item .noborder{
      border: none;
}
/* 底部 */
.pay_footer{
      position: fixed;
      width: 100%;
      height: 100rpx;
      background: #3c3c3c;
      bottom: 0;
      left: 0;
      display: flex;
      padding-left:20rpx; 
}
.pay_footer .ft_xiaoji{
      flex: 1;
      color: #fff;
      line-height: 100rpx;
}
.pay_footer .ft_topay{
      width: 200rpx;
}
.pay_footer .ft_topay button{
      height: 100rpx;
      border-radius: 0;
      line-height: 100rpx;
      
}